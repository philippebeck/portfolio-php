{% extends 'layout/layout.twig' %}

{% block subtitle %}Authentication{% endblock %}

{% block description %}{% endblock %}

{% block main %}
    <main class="text-center">
        <form class="form" action="{{ url('user!login')}}" method="post">
            <fieldset>
                <legend><i class="fas fa-lock" aria-hidden="true"></i> Login to the Administration</legend>
                <ul>
                    <li>
                        <label for="email">Email</label>
                        <input id="email" name="email" type="email" placeholder="Insert your email" required>
                    </li>
                    <li>
                        <label for="pass">Password</label>
                        <input id="pass" name="pass" type="password" placeholder="Insert your password" autocomplete="off" required>
                    </li>
                    <li>
                        <input type="reset" value="Reset">
                        <input type="submit" value="Login">
                    </li>
                </ul>
            </fieldset>
        </form>
        <a class="btn-black btn-lg" href="./">Quit</a>
    </main>
{% endblock %}
