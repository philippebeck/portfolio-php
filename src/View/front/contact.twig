{% extends 'layout/layout.twig' %}

{% block subtitle %}Contact{% endblock %}

{% block description %}You can contact me by message{% endblock %}

{% block main %}
    <main class="text-center">
        <form class="form" method="post" action={{ url('contact') }}>
            <fieldset>
                <legend>
                    <i class="fas fa-at fa-fw fa-2x" aria-hidden="true"></i>
                </legend>
                <ul>
                    <li>
                        <label for="name">Name</label>
                        <input id="name" name="name" type="text" placeholder="Your name" maxlength="20" required>
                    </li>
                    <li>
                        <label for="email">Email</label>
                        <input id="email" name="email" type="email" placeholder="Your email" maxlength="50" required>
                    </li>
                    <li>
                        <label for="subject">Subject</label>
                        <input id="subject" name="subject" type="text" placeholder="Your subject" maxlength="50" required>
                    </li>
                    <li>
                        <label for="message">Message</label>
                        <textarea id="message" name="message" placeholder="Your message" rows="5" cols="20"></textarea>
                    </li>
                </ul>
                <ul>
                    <li>
                        <div id="recaptcha" class="g-recaptcha container" data-sitekey="6Ld_2eYUAAAAAPHLRqN5mOEqZJqNKq7RO01CcwIy"></div>
                    </li>
                    <li>
                        <input type="reset" value="Reset">
                        <input type="submit" value="Send">
                    </li>
                </ul>
            </fieldset>
        </form>
        <a class="btn-black btn-lg" href="{{ url('home') }}">Quit</a>
    </main>
{% endblock %}