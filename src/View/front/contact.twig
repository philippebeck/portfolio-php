{% extends 'layout/layout.twig' %}  {# TODO -> Add content #}

{% block subtitle %}Contact{% endblock %}

{% block description %}You can contact me by message{% endblock %}

{% block main %}
    <main class="align-center">
        <form class="form anima-growX" method="post" action={{ url('contact') }}>
            <fieldset>
                <ul>
                    <li>
                        <label class="anima-slideR" for="name">Name</label>
                        <input class="anima-slideL" id="name" name="name" type="text" placeholder="Your name" maxlength="20" required>
                    </li>
                    <li>
                        <label class="anima-slideR" for="email">Email</label>
                        <input class="anima-slideL" id="email" name="email" type="email" placeholder="Your email" maxlength="50" required>
                    </li>
                    <li>
                        <label class="anima-slideR" for="subject">Subject</label>
                        <input class="anima-slideL" id="subject" name="subject" type="text" placeholder="Your subject" maxlength="50" required>
                    </li>
                    <li>
                        <label class="anima-slideR" for="message">Message</label>
                        <textarea class="anima-slideL" id="message" name="message" placeholder="Your message" rows="5" cols="20"></textarea>
                    </li>
                </ul>
                <ul>
                    <li>
                        <div id="recaptcha" class="g-recaptcha" data-sitekey="6Ld_2eYUAAAAAPHLRqN5mOEqZJqNKq7RO01CcwIy"></div>
                    </li>
                    <li>
                        <input class="anima-slideR" type="reset" value="Reset">
                        <input class="anima-slideL" type="submit" value="Send">
                    </li>
                </ul>
            </fieldset>
        </form>
        <a class="btn-black btn-lg" href="{{ url('home') }}">Quit</a>
    </main>
{% endblock %}