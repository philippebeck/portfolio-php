{% extends 'layout/layout.twig' %}

{% block subtitle %}Fullstack Developer & Mentor{% endblock %}

{% block description %}Philippe Beck - Fullstack Development & Mentorship in Development - Technologies HTML5, Twig, CSS3, SCSS, JavaScript, Nodejs, PHP, Symfony, SQL, Git, GitHub{% endblock %}

{% block main %}
    <main id="home" class="container-90sm-80md-70lg mar-bot-md">

        <!-- Projects -->
        <section class="card-red anima-slideR">
            <h2>Projects</h2>
            <figure>
                <a href="{{ url('project') }}" title="Projects Access">
                    <img src="img/projects/animadio.png" alt="Screenshot of the project Animadio">
                </a>
            </figure>
            <p>Animadio (2019)</p>
            <a class="btn" href="{{ url('project') }}" title="Projects Access">
                <i class="fas fa-project-diagram" aria-hidden="true"></i>
            </a>
        </section>

        <!-- Jobs -->
        <section class="card-green anima-slideT">
            <h2>Jobs</h2>
            <figure>
                <a href="{{ url('job') }}" title="Jobs Access">
                    <img src="img/jobs/oc.png" alt="Logo of OpenClassrooms">
                </a>
            </figure>
            <p>Professional Experiences</p>
            <a class="btn" href="{{ url('job') }}" title="Jobs Access">
                <i class="fas fa-suitcase" aria-hidden="true"></i>
            </a>
        </section>

        <!-- Certificates -->
        <section class="card-blue anima-slideL">
            <h2>Certificates</h2>
            <figure>
                <a href="{{ url('certificate') }}" title="Certificates Access">
                    <img src="img/about/diplome-3wa.jpg" alt="Fullstack Developer Degree">
                </a>
            </figure>
            <p>Fullstack Web Development</p>
            <a class="btn" href="{{ url('certificate') }}" title="Certificates Access">
                <i class="fas fa-certificate" aria-hidden="true"></i>
            </a>
        </section>
    </main>
{% endblock %}
