{% extends 'layout/layout.twig' %}

{% block subtitle %}Projects{% endblock %}

{% block description %}Frameworks & Websites Projects - Animadio & Free Code Camp Pens - Languages HTML5, Twig, Pugjs, CSS3, SCSS, Stylus, JavaScript, jQuery, CoffeeScript, Nodejs, Expressjs, PHP, MySQL{% endblock %}

{% block main %}

    <!-- CONTROLS -->
    <input id="tool" class="block-radio1" type="radio" name="project" checked>
    <input id="website" class="block-radio2" type="radio" name="project">
    <input id="animadio" class="block-radio3" type="radio" name="project">
    <input id="freecodecamp" class="block-radio4" type="radio" name="project">

    <main id="project" class="container-90tn-80md-70wd align-center hide-global block-relay">

        <header class=" container-90sm-80md-70lg-60wd bg-white bord-double bord-curve bord-purple pad-md mar-bot-lg anima-half block">
            <p>Thank you for coming to my Projects page!</p>
            <p>Open-source projects fascinate me :</p>
            <ul>
                <li>I am the founder of the Animadio organization</li>
                <li>I created the CSS Animadio framework & Animadio JS</li>
                <li>I published too Animadio website & documentation website</li>
                <li>I'm also the creator of the PHP Microframework Pam</li>
                <li>I create other open-source projects such as packaged tools, templates & websites</li>
                <li>my future projects will be built with JavaScript & Python</li>
            </ul>
        </header>

        <label class="button-red inblock" for="tool" title="My Tools Creations">
            <i class="fas fa-tools fa-lg" aria-hidden="true"></i>
            Tools
        </label>
        <label class="button-blue inblock" for="website" title="My Websites">
            <i class="fas fa-globe fa-lg" aria-hidden="true"></i>
            WebSites
        </label>
        <label class="button-black inblock" for="animadio" title="My Pens for Animadio">
            <i class="fab fa-codepen fa-lg" aria-hidden="true"></i>
            Animadio Pens
        </label>
        <label class="button-green inblock" for="freecodecamp" title="My Pens for Free Code Camp">
            <i class="fab fa-free-code-camp fa-lg" aria-hidden="true"></i>
            Free Code Camp Pens
        </label>

        <!-- TOOLS -->
        <section class="block-target1">
            <h2 class="color-red">
                <i class="fas fa-tools" aria-hidden="true"></i> Tools
            </h2>
            <figure class="gallery">

                {% for toolProject in allToolProjects %}
                    <figure class="button-red anima-fullX">
                        <a href="https://{{ toolProject.link }}" title="Watch {{ toolProject.name }} on GitHub" rel="noreferrer noopener" target="_blank">
                            <img src="img/projects/{{ toolProject.image }}" alt="Screenshot of {{ toolProject.name }}">
                        </a>
                        <figcaption>
                            <a href="https://{{ toolProject.link }}" title="Watch {{ toolProject.name }} on GitHub" rel="noreferrer noopener" target="_blank">
                                <h3>{{ toolProject.name }}</h3>
                                <p>{{ toolProject.description }}</p>
                                <p>{{ toolProject.year }}</p>
                            </a>
                        </figcaption>
                    </figure>
                {% endfor %}

            </figure>
        </section>

        <!-- WEBSITES -->
        <section class="block-target2">
            <h2 class="color-blue">
                <i class="fas fa-globe" aria-hidden="true"></i> WebSites
            </h2>
            <figure class="gallery">

                {% for websiteProject in allWebsiteProjects %}
                    <figure class="btn-blue anima-fullY">
                        <a href="https://{{ websiteProject.link }}" title="Watch {{ websiteProject.name }} on GitHub" rel="noreferrer noopener" target="_blank">
                            <img src="img/projects/{{ websiteProject.image }}" alt="Screenshot of {{ websiteProject.name }}">
                        </a>
                        <figcaption>
                            <a href="https://{{ websiteProject.link }}" title="Watch {{ websiteProject.name }} on GitHub" rel="noreferrer noopener" target="_blank">
                                <h3>{{ websiteProject.name }}</h3>
                                <p>{{ websiteProject.description }}</p>
                                <p>{{ websiteProject.year }}</p>
                            </a>
                        </figcaption>
                    </figure>
                {% endfor %}

            </figure>
        </section>

        <!-- ANIMADIO -->
        <section class="block-target3">
            <h2 class="color-black">
                <i class="fab fa-codepen" aria-hidden="true"></i> Animadio Pens
            </h2>
            <figure class="gallery">

                {% for animadioPen in allAnimadioPens %}
                    <figure class="btn anima-halfX">
                        <a href="https://{{ animadioPen.link }}" title="Watch {{ animadioPen.name }} on CodePen" rel="noreferrer noopener" target="_blank">
                            <img src="img/projects/{{ animadioPen.image }}" alt="Screenshot of {{ animadioPen.name }}">
                        </a>
                        <figcaption>
                            <a href="https://{{ animadioPen.link }}" title="Watch {{ animadioPen.name }} on CodePen" rel="noreferrer noopener" target="_blank">
                                <h3>{{ animadioPen.name }}</h3>
                                <p>{{ animadioPen.description }}</p>
                                <p>{{ animadioPen.year }}</p>
                            </a>
                        </figcaption>
                    </figure>
                {% endfor %}

            </figure>
        </section>

        <!-- FREE CODE CAMP -->
        <section class="block-target4">
            <h2 class="color-green">
                <i class="fab fa-free-code-camp" aria-hidden="true"></i> Free Code Camp Pens
            </h2>
            <figure class="gallery">

                {% for freecodecampPen in allFreecodecampPens %}
                    <figure class="btn-green anima-halfY">
                        <a href="https://{{ freecodecampPen.link }}" title="Watch {{ freecodecampPen.name }} on CodePen" rel="noreferrer noopener" target="_blank">
                            <img src="img/projects/{{ freecodecampPen.image }}" alt="Screenshot of {{ freecodecampPen.name }}">
                        </a>
                        <figcaption>
                            <a href="https://{{ freecodecampPen.link }}" title="Watch {{ freecodecampPen.name }} on CodePen" rel="noreferrer noopener" target="_blank">
                                <h3>{{ freecodecampPen.name }}</h3>
                                <p>{{ freecodecampPen.description }}</p>
                                <p>{{ freecodecampPen.year }}</p>
                            </a>
                        </figcaption>
                    </figure>
                {% endfor %}

            </figure>
        </section>

    </main>
{% endblock %}