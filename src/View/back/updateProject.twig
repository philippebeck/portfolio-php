{% extends 'layout/layout.twig' %}

{% block subtitle %}Edit a Project{% endblock %}

{% block description %}{% endblock %}

{% block main %}
    <main class="text-center">
        <form class="form" method="post" action={{ url('project!update', {'id': project.id}) }} enctype="multipart/form-data">
            <input type="hidden" name="MAX_FILE_SIZE" value="10000000">
            <fieldset>
                <legend>
                    <i class="fab fa-github fa-fw fa-2x" aria-hidden="true"></i>
                </legend>
                <ul>
                    <li>
                        <label for="name">Name</label>
                        <input id="name" name="name" type="text" maxlength="50" required value="{{ project.name }}">
                    </li>
                    <li>
                        <label for="file">Picture</label>
                        <input name="file" type="file" accept=".jpg, .jpeg, .png, .svg, .gif, .pdf">
                    </li>
                    <li>
                        <label for="link">Link</label>
                        <input id="link" name="link" type="text" maxlength="50" required value="{{ project.link }}">
                    </li>
                    <li>
                        <label for="year">Year</label>
                        <input id="year" name="year" type="number" required value="{{ project.year }}">
                    </li>
                    <li>
                        <label for="category">Category</label>
                        <select id="category" name="category" required>
                            <option value="{{ project.category }}">{{ project.category|capitalize }} (is registred)</option>
                            <option value="tool">-- Choose a category</option>
                            <option value="tool">Tool</option>
                            <option value="website">Website</option>
                        </select>
                    </li>
                    <li>
                        <label for="description">Description</label>
                        <textarea id="description" name="description" rows="5" maxlength="255" required>{{ project.description }}</textarea>
                    </li>
                </ul>
                <ul>
                    <li>
                        <input type="reset" value="Reset">
                        <input type="submit" value="Update">
                    </li>
                </ul>
            </fieldset>
        </form>
        <a class="btn-black btn-lg" href="{{ url('admin') }}">Quit</a>
    </main>
{% endblock %}
